    // --- éŠæˆ²é‚è¼¯ ---
    let currentQuestions = [];
    let userPoints = 0;
    
    // åˆå§‹åŒ–
    window.onload = function() {
        // å˜—è©¦è®€å–å·²å„²å­˜çš„é»æ•¸
        const savedPoints = localStorage.getItem('scienceQuizPoints');
        if(savedPoints) userPoints = parseInt(savedPoints);
        updateStatusDisplay();
        initGame();
    };

    function initGame() {
        // é‡ç½®ä»‹é¢
        document.getElementById('quiz-area').style.display = 'block';
        document.getElementById('reward-section').style.display = 'none';
        document.getElementById('quiz-area').innerHTML = '';
        
        // éš¨æ©Ÿé¸ 5 é¡Œ
        currentQuestions = getRandomQuestions(5);
        
        // æ¸²æŸ“é¡Œç›®
        renderQuestions();
        updateStatusDisplay();
    }

    function getRandomQuestions(count) {
        const shuffled = [...questionBank].sort(() => 0.5 - Math.random());
        return shuffled.slice(0, count);
    }

    function renderQuestions() {
        const quizArea = document.getElementById('quiz-area');
        
        currentQuestions.forEach((q, index) => {
            const card = document.createElement('div');
            card.className = 'card';
            card.innerHTML = `
                <div class="question-title">ç¬¬ ${index + 1} é¡Œï¼š${q.question}</div>
                ${q.imageText ? `<div class="image-placeholder">${q.imageText}</div>` : ''}
                <div class="options">
                    ${q.options.map((opt, i) => `
                        <label class="option-label" id="label-${index}-${i}">
                            <input type="radio" name="q-${index}" value="${i}"> (${['A','B','C','D'][i]}) ${opt}
                        </label>
                    `).join('')}
                </div>
                <div class="explanation" id="exp-${index}">
                    <div id="result-tag-${index}" class="result-tag"></div>
                    <strong>è§£æï¼š</strong>${q.explanation}
                </div>
            `;
            quizArea.appendChild(card);
        });

        // åŠ å…¥é€å‡ºæŒ‰éˆ•
        const submitBtn = document.createElement('button');
        submitBtn.className = 'btn';
        submitBtn.innerText = 'âœ¨ é€å‡ºç­”æ¡ˆ âœ¨';
        submitBtn.onclick = checkAnswers;
        quizArea.appendChild(submitBtn);
    }

    function checkAnswers() {
        let correctCount = 0;
        let answeredAll = true;

        // æª¢æŸ¥æ˜¯å¦æ¯é¡Œéƒ½ç­”äº†
        currentQuestions.forEach((q, index) => {
            const selected = document.querySelector(`input[name="q-${index}"]:checked`);
            if (!selected) answeredAll = false;
        });

        if (!answeredAll) {
            alert("é‚„æœ‰é¡Œç›®æ²’å¯«å®Œå–”ï¼è«‹æª¢æŸ¥ä¸€ä¸‹ ğŸ¥º");
            return;
        }

        // æ‰¹æ”¹
        currentQuestions.forEach((q, index) => {
            const selectedVal = parseInt(document.querySelector(`input[name="q-${index}"]:checked`).value);
            const expDiv = document.getElementById(`exp-${index}`);
            const resultTag = document.getElementById(`result-tag-${index}`);
            const correctLabel = document.getElementById(`label-${index}-${q.answer}`);
            const selectedLabel = document.getElementById(`label-${index}-${selectedVal}`);

            expDiv.style.display = 'block'; // é¡¯ç¤ºè§£æ

            if (selectedVal === q.answer) {
                correctCount++;
                resultTag.innerText = "âœ… ç­”å°äº†ï¼";
                resultTag.className = "result-tag tag-correct";
                selectedLabel.style.backgroundColor = "#d4edda";
                selectedLabel.style.borderColor = "#c3e6cb";
            } else {
                resultTag.innerText = "âŒ ç­”éŒ¯å›‰";
                resultTag.className = "result-tag tag-wrong";
                selectedLabel.style.backgroundColor = "#f8d7da";
                selectedLabel.style.borderColor = "#f5c6cb";
                // æ¨™ç¤ºæ­£ç¢ºç­”æ¡ˆ
                correctLabel.style.backgroundColor = "#fff3cd"; 
                correctLabel.style.border = "2px solid #ffeeba";
            }
            
            // ç¦ç”¨é¸é …é˜²æ­¢ä¿®æ”¹
            const inputs = document.getElementsByName(`q-${index}`);
            inputs.forEach(input => input.disabled = true);
        });

        // è¨ˆç®—åˆ†æ•¸èˆ‡é¡¯ç¤ºçµæœ
        const pointsGained = correctCount * 10; // ä¸€é¡Œ 10 åˆ†
        userPoints += pointsGained;
        localStorage.setItem('scienceQuizPoints', userPoints); // å„²å­˜é»æ•¸

        // éš±è—é€å‡ºæŒ‰éˆ•ï¼Œé¡¯ç¤ºçµæœå€
        document.querySelector('.btn').style.display = 'none';
        
        setTimeout(() => {
            showRewardSection(pointsGained);
        }, 800);
    }

    function showRewardSection(pointsGained) {
        document.getElementById('quiz-area').style.display = 'none';
        const rewardSection = document.getElementById('reward-section');
        rewardSection.style.display = 'block';
        
        document.getElementById('score-gain').innerText = pointsGained;
        document.getElementById('total-score').innerText = userPoints;
        updateStatusDisplay();
        checkBadges();
    }

    function updateStatusDisplay() {
        document.getElementById('points-display').innerText = userPoints;
        // é€²åº¦é€™è£¡ç°¡å–®é¡¯ç¤ºç•¶å‰æ˜¯ 5 é¡Œç·´ç¿’æ¨¡å¼
        document.getElementById('progress-display').innerText = document.querySelectorAll('.card').length > 0 ? "5" : "0";
    }

    function checkBadges() {
        // æª¢æŸ¥ä¸¦è§£é–å‹³ç« 
        const badges = [
            { id: 'badge-1', threshold: 50 },
            { id: 'badge-2', threshold: 200 },
            { id: 'badge-3', threshold: 500 },
            { id: 'badge-4', threshold: 1000 }
        ];

        badges.forEach(b => {
            const el = document.getElementById(b.id);
            if (userPoints >= b.threshold) {
                if (!el.classList.contains('unlocked')) {
                    // æ–°è§£é–ç‰¹æ•ˆ
                    el.classList.add('unlocked');
                } else {
                    el.classList.add('unlocked');
                }
            }
        });
    }
</script>

</body>
</html>
